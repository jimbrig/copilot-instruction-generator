{
  "publisher": "bjorn",
  "name": "copilot-instruction-generator",
  "displayName": "copilot-instruction-generator",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "description": "",
  "author": "Bjorn Li <bjorn@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/lxxorz",
  "homepage": "https://github.com/lxxorz/copilot-instruction-generator#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/lxxorz/copilot-instruction-generator"
  },
  "bugs": {
    "url": "https://github.com/lxxorz/copilot-instruction-generator/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/lxxorz"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.92.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cig.selectAIPrompt",
        "title": "Generate Instruction"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "copilot-instruction-generator",
      "properties": {
        "copilot-instruction-generator.cursorRules": {
          "type": "boolean",
          "default": false,
          "description": "generate for cursor editor"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@antfu/ni": "^0.23.0",
    "@types/node": "^22.7.5",
    "@types/vscode": "^1.94.0",
    "@vscode/vsce": "^3.1.1",
    "bumpp": "^9.7.1",
    "effect": "^3.9.1",
    "eslint": "^9.12.0",
    "esno": "^4.8.0",
    "pnpm": "^9.12.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^2.1.2",
    "vscode-ext-gen": "^0.4.3"
  }
}
