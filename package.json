{
  "publisher": "BjornLi",
  "name": "copilot-instruction-generator",
  "displayName": "copilot-instruction-generator",
  "version": "0.0.3",
  "private": true,
  "packageManager": "pnpm@9.14.3",
  "description": "",
  "author": "Bjorn Li <bjorn@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/lxxorz",
  "homepage": "https://github.com/lxxorz/copilot-instruction-generator#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/lxxorz/copilot-instruction-generator"
  },
  "bugs": {
    "url": "https://github.com/lxxorz/copilot-instruction-generator/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/lxxorz"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.92.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cig.selectAIPrompt",
        "title": "Browse Instructions by Category",
        "category": "CIG"
      },
      {
        "command": "cig.searchAIPrompt",
        "title": "Search Instructions by Keyword",
        "category": "CIG"
      },
      {
        "command": "cig.clearGlobalState",
        "title": "Clear Extension State",
        "category": "CIG"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "copilot-instruction-generator",
      "properties": {
        "copilot-instruction-generator.cursorRules": {
          "type": "boolean",
          "default": false,
          "description": "Generate for Cursor Editor instead of GitHub Copilot"
        },
        "copilot-instruction-generator.enableAutoDetect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect and prompt to create AI config files"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.11.2",
    "@antfu/ni": "^0.23.1",
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "@vscode/vsce": "^3.2.1",
    "bumpp": "^9.9.0",
    "eslint": "^9.16.0",
    "esno": "^4.8.0",
    "pnpm": "^9.15.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.8",
    "vscode-ext-gen": "^0.4.4"
  }
}
